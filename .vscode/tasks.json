{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Humata: Build assets",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Humata: Dev watch assets (auto)",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [
        {
          "owner": "humata-assets",
          "pattern": [
            {
              "regexp": "^(.*)$",
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "\\\\[humata-assets\\\\] Starting watch\\\\.\\\\.\\\\.",
            "endsPattern": "\\\\[humata-assets\\\\] Watching for changes\\\\.\\\\.\\\\."
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    }
  ]
}



